<div class="container form-horizontal space" >
  
  <%= form_for @list do |l| %>
    <div class="form-group">
      <%= l.label :name, "Title", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= l.text_field :name, class: "form-control" %>
      </div>
      <div class="col-sm-2 "></div>
      <% if @list.errors.present? %>
        <ul class="col-sm-10">
          <% @list.errors.each do |error,message|%>
            <% if error == :name %>
              <li><%= "Title #{message}" %></li>
            <% end %>
          <% end %>
        </ul>
      <% end %>
    </div>
    
    <div class="form-group">
      <%= l.label :due_date, "Due date", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= l.date_field :due_date, class: "form-control" %>
      </div>
      <div class="col-sm-2 "></div>
      <% if @list.errors.present? %>
        <ul class="col-sm-10">
          <% @list.errors.each do |error,message|%>
            <% if error == :due_date %>
              <li><%= "Due date #{message}" %></li>
            <% end %>
          <% end %>
        </ul>
      <% end %>
    </div>

    <div class="form-group">  
      <%= l.label :note, "Description", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= l.text_area :note, class: "form-control" %>
      </div>
      <div class="col-sm-2 "></div>
      <% if @list.errors.present? %>
        <ul class="col-sm-10">
          <% @list.errors.each do |error,message|%>
            <% if error == :note %>
              <li><%= "Description #{message}" %></li>
            <% end %>
          <% end %>
        </ul>
      <% end %>
    </div>
  
    <div class="col-sm-2"></div>
    <%= link_to 'Back', lists_path, class: "btn btn-default btn-float" %>
    <%= l.submit class: "btn btn-default btn-float" %>
    
  <% end %>
</div>
